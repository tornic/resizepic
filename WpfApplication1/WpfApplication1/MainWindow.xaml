<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Press me" HorizontalAlignment="Left" Margin="215,288,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.303,0.979" Click="Button_Click"/>
        <TextBox x:Name="mybox" HorizontalAlignment="Left" Height="23" Margin="165,248,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="66"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="274,248,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="72"/>
        <Image HorizontalAlignment="Left" Height="222" Margin="10,10,0,0" VerticalAlignment="Top" Width="497"/>
        <Menu IsMainMenu="True" Height="27" HorizontalAlignment="Left" Name="menu1" VerticalAlignment="Top" Width="503" >
            <MenuItem Header="_File">
                <MenuItem Header="_New..."  Click="New_Click"/>
                <Separator />
                <MenuItem Header="_Open..." Click="Open_Click"/>
                <Separator />
                <MenuItem Header="_Save" />
                <MenuItem Header="_Save As..." />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        

    </Grid>
</Window>
